<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="32dp"
    android:paddingEnd="32dp"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity"
    tools:ignore="RtlSymmetry">

    <ImageView
        android:id="@+id/rectangle"
        android:layout_width="45dp"
        android:layout_height="43dp"
        android:background="@drawable/green_gradient"
        android:layout_marginTop="139dp" />

    <TextView
        android:id="@+id/helloTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/hello"
        android:textColor="@color/white"
        android:textSize="42sp" />

    <TextView
        android:id="@+id/letsIntroduceTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="@string/lets_introduce"
        android:textColor="@color/lets_introduce"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/fullNameLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="37dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fullNameLogo"
            android:layout_width="38dp"
            android:layout_height="48dp"
            android:background="@drawable/profile_background"
            android:foreground="@drawable/ic_person"
            tools:targetApi="m" />

        <EditText
            android:id="@+id/fullNameEditTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="18dp"
            android:hint="@string/your_full_name"
            android:textColorHint="@color/lets_introduce"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/userNameLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="44dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userNameLogo"
            android:layout_width="38dp"
            android:layout_height="48dp"
            android:background="@drawable/profile_background"
            android:foreground="@drawable/ic_person"
            tools:targetApi="m" />

        <EditText
            android:id="@+id/userNameEditTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="18dp"
            android:hint="@string/username"
            android:textColorHint="@color/lets_introduce"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/navigationLayout"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">

    <ImageButton
        android:id="@+id/backImageBtn"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:background="@color/back_button_background"
        android:foreground="@drawable/ic_keyboard_backspace"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/nextCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            app:cardBackgroundColor="@color/green_gradient_start" >

            <LinearLayout
                android:id="@+id/nextLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nextTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/next"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_marginStart="91dp"/>

                <ImageView
                    android:id="@+id/nextArrowImage"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/ic_arrow_right"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

</LinearLayout>